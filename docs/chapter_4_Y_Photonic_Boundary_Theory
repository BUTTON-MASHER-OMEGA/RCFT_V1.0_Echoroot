import numpy as np
import matplotlib.pyplot as plt
from scipy.linalg import expm, sqrtm, norm
from sklearn.linear_model import LinearRegression
from sklearn.model_selection import KFold
from scipy.stats import linregress, t
import csv
import scipy.stats as stats
import astropy.cosmology as cosmo
from astropy import units as u

# Initialize cosmological model with Planck 2018
cosmo_model = cosmo.Planck18

# Initialize shard state with variable n_shards
n_shards = 10  # Base case, will vary for entropy scaling
x = np.random.rand(n_shards, 3)  # Position (r component)
v = np.zeros(n_shards)  # Velocity
R = np.array([np.eye(3) for _ in range(n_shards)])  # Orientation
Y = np.array([np.diag(np.random.rand(3) + 0.1) for _ in range(n_shards)])  # SPD metric
y = np.random.rand(n_shards, 10)  # Twistor vector
v_val = np.random.rand(n_shards)  # Valence
m_mem = np.random.rand(n_shards)  # Memory mass
X = np.random.rand(n_shards, 3)  # Real twistor part
Y_metric = np.array([np.diag(np.random.rand(3) + 0.1) for _ in range(n_shards)])  # Imaginary SPD part
Z = X + 1j * Y_metric  # Twistor coordinate
curv_twist = np.random.rand(n_shards)  # Initial twistor curvature
kappa, eta, zeta, delta, theta, rho, tau_threshold, curv_max, mu, nu, lambda_trend, sigma0, phi = 0.1, 0.05, 0.01, 0.02, 0.005, 0.01, 0.1, 1.0, 0.2, 0.1, 0.05, 0.01, 0.1
psi, chi, xi = 0.01, 0.015, 0.02  # Adjustable for ablation
lambda_val = 0.5  # Potential parameter
dt = 0.01  # Initial time step
c = 1.0  # Speed of light (normalized)
alpha_gamma, beta_L, Pi_gamma = 1.0, 0.5, 1.0  # Enhanced for KBE
m = 1.0  # Rest mass
window_size = 10  # Moving average window
t_cosmological = 0.0  # Initial cosmological time (Ï„)
base_c1, base_c2 = 1.0, 0.5  # Base entropy coefficients
delta_S_hist, R2_hist = [], []  # Histories for forecasting
tw_trend = [[] for _ in range(n_shards)]  # Trend tracking per shard
noise_scale = np.ones(n_shards)  # Per-shard noise scaling
var_threshold = 1e-4  # Gradient variance threshold
rcz_thresholds = [0.1, 0.5, 1.0]  # RCZ crossing points
rcz_crossings = []  # Global for RCZ tracking
n_shard_configs = [5, 10, 20]  # Test different shard counts

# Projection operators
def Pi_so3(A):
    return 0.5 * (A - A.T)

def Pi_SPD(grad_Y, Y):
    sym_grad = 0.5 * (grad_Y + grad_Y.transpose(0, 2, 1))
    eigvals, eigvecs = np.linalg.eigh(sym_grad)
    eigvals = np.maximum(eigvals, 1e-6)
    return np.array([eigvecs[i] @ np.diag(eigvals[i]) @ eigvecs[i].T for i in range(n_shards)])

# Dynamic trend and adjustment calculations
def dynamic_trend(data, window):
    if len(data) < 2 * window:
        return 0.0
    recent_mean = np.mean(data[-window:])
    prior_mean = np.mean(data[-2*window:-window])
    trend = (recent_mean - prior_mean) / window
    accel = (np.mean(data[-window//2:]) - np.mean(data[-window:-window//2])) / (window//2) if window > 2 else 0.0
    return trend + 0.1 * accel

def trend_adjustment(data, window):
    trend = dynamic_trend(data, window)
    return trend * (1 - np.abs(trend) / curv_max) if np.abs(trend) < curv_max else 0.0

# RCFT Metric and Null KBE boundary
def check_photon_boundary(x, t, c):
    r = np.sqrt(np.sum(x**2, axis=1))  # Radial distance
    r_kbe = photon_horizon(t)  # Null KBE
    a_r_t = a_function(r, t)  # Time Emergence Function
    b_r_t = b_function(r, t)  # Valence Compression Function
    ds2 = -a_r_t * dt**2 + b_r_t * (dr/dt)**2  # Approximate line element
    return np.all(ds2 <= 0) and r <= r_kbe  # Null condition

def coherence_radius(x):
    return np.sqrt(np.sum((x - np.mean(x, axis=0))**2, axis=1))

def translational_update(x, grad_x, v, t, c, dt, sigma_x, eta_x, noise_scale, epsilon=1e-6):
    if grad_x.shape != (n_shards, 3) or eta_x.shape != (n_shards, 3):
        raise ValueError(f"Shape mismatch: grad_x {grad_x.shape}, eta_x {eta_x.shape}")
    dx_update = -dt * grad_x + eta_x
    r_horizon = photon_horizon(t)  # Null KBE
    r_next = np.sqrt(np.sum((x + dx_update)**2, axis=1))
    scale_factors = np.ones(n_shards)
    for i in range(n_shards):
        a_r_t = a_function(r_next[i], t)
        b_r_t = b_function(r_next[i], t)
        if r_next[i] > 0.9 * r_horizon or -a_r_t * dt**2 + b_r_t * (dx_update[i]/dt)**2 > 0:
            noise_scale[i] = max(0.5, noise_scale[i] * 0.9)
        if r_next[i] > r_horizon:
            scale_factors[i] = min(1.0, r_horizon / (r_next[i] + epsilon))
    return x + dx_update * scale_factors[:, np.newaxis]

# Cosmological horizon with Î›CDM comoving distances for Null KBE
def photon_horizon(t):
    t_years = t * 13.8e9 / 16000  # Scale to 13.8 Gyr for 16,000 events
    z = cosmo_model.age(0).value / (t_years / 1e9) - 1
    if z < 0: z = 0
    comoving_distance = cosmo_model.comoving_distance(z).value * u.Mpc.to(u.km) / (3e5 * u.km / u.s)  # Light-time
    return comoving_distance / 13.8e9  # Normalized Null KBE units

# Time Emergence and Valence Compression Functions (initial ansatz)
def a_function(r, t):
    # Near singularity (r->0), A->0; at KBE, A->1/B
    r_kbe = photon_horizon(t)
    return 1.0 - np.exp(-r / r_kbe)  # Simplified, approaches 1 as r->r_kbe

def b_function(r, t):
    # Large in RCZ, modulated by valence
    r_kbe = photon_horizon(t)
    return 1.0 + 10.0 * np.exp(-r / r_kbe) * np.mean(v_val)  # Simplified, large near r=0

# BRST operator
def Q_f_update(Q_f, Y, v_val, Z, curv_twist, grad_curv_twist):
    Q_base = np.array([[0, 1, 0], [0, 0, 1], [0, 0, 0]])
    twistor_deriv = np.gradient(np.imag(Z), axis=1)
    curv_grad = np.gradient(curv_twist, axis=0) / norm(curv_twist)
    feedback_term = np.diag(curv_grad) / norm(curv_grad)
    Q_twistor = Q_base + np.tensordot(twistor_deriv, Q_base, axes=0) / norm(twistor_deriv) + feedback_term
    Q_f_new = np.tensordot(Q_twistor, Q_f, axes=([1, 2], [0, 1]))
    Q_f_norm = norm(Q_f_new, axis=(1, 2, 3))
    Q_f_new[Q_f_norm > 1e-9] = 0
    return Q_f_new

# Potential and Coherence-Tension Tensor with Compression Scalar
def Phi(m_mem, v_val, curv_YM, curv_twist, Z, kappa, eta, x=None, Y=None):
    if x is None: x = np.zeros_like(m_mem)
    if Y is None: Y = np.array([np.eye(3) for _ in range(n_shards)])
    grad_curv_twist = np.gradient(curv_twist, axis=0)
    grad_Z = np.gradient(Z, axis=1)
    curv_twist_term = kappa * np.abs(grad_curv_twist)**2
    interaction_term = eta * (curv_twist * np.abs(grad_Z)**2 + np.abs(grad_curv_twist * grad_Z))
    r = np.sqrt(np.sum(x**2, axis=1))
    a_r_t = a_function(r, t_cosmological)
    b_r_t = b_function(r, t_cosmological)
    # Coherence-Tension Tensor components
    t_gamma = np.ones(n_shards) * 0.1 * a_r_t  # Photon Field stress
    r_horizon = photon_horizon(t_cosmological)
    t_emergence = alpha_gamma * a_r_t * np.log(1 + r_horizon)  # Emergence Drive
    t_containment = beta_L * b_r_t * np.sum(v_val**2)  # Containment Stress
    t_mu_nu = t_gamma + t_emergence - t_containment  # TÎ¼Î½
    # Conservation law check (approximate)
    grad_t_mu_nu = np.gradient(t_mu_nu, axis=0)
    if not np.allclose(np.sum(grad_t_mu_nu, axis=0), 0, atol=1e-6):
        print(f"Conservation violation at t={t_cosmological}, grad_t_mu_nu={np.sum(grad_t_mu_nu, axis=0)}")
    # Compression Scalar
    grad_e_mu = np.gradient(t_emergence, axis=0)  # Approximate gradient of EÎ¼
    chi = -np.sum(grad_e_mu)  # Compression Scalar
    # Valence potential minimum for RCZ
    v_potential = lambda_val * v_val**2
    if chi > np.min(v_potential) and not any('rcz_birth' in gate for gate in results_lawful['gates'][-1:]):
        print(f"RCZ matter birth at t={t_cosmological}, chi={chi}, v_min={np.min(v_potential)}")
    return np.sum(beta * m_mem + lambda_val * v_val - gamma * (curv_YM + curv_twist + curv_twist_term + interaction_term) + t_mu_nu)

def grad_Phi_finite(x, v_val, m_mem, Y, curv_YM, curv_twist, Z, kappa, eta, dx=1e-6):
    grad_x = np.zeros_like(x)  # (n_shards, 3)
    grad_v = np.zeros_like(v_val)  # (n_shards,)
    grad_Y = np.zeros_like(Y)  # (n_shards, 3, 3)
    grad_Z = np.zeros_like(Z, dtype=complex)  # (n_shards, 3)
    Phi_base = Phi(m_mem, v_val, curv_YM, curv_twist, Z, kappa, eta)
    dx_values = [1e-4, 1e-5, 1e-6, 1e-7, 1e-8, 1e-9]
    window_size = min(50, max(5, int(len(grad_vars) * 0.5) + 1)) if 'grad_vars' in locals() else 64
    grad_sums = {'x': np.zeros_like(x), 'v': np.zeros_like(v_val), 'Y': np.zeros_like(Y), 'Z': np.zeros_like(Z, dtype=complex)}
    grad_vars = [] if 'grad_vars' not in locals() else grad_vars
    for dx in dx_values:
        for i in range(n_shards):
            x_pert = x.copy()
            x_pert[i] += dx
            grad_sums['x'][i] += (Phi(m_mem, v_val, curv_YM, curv_twist, Z, kappa, eta, x=x_pert) - Phi_base) / dx
            v_pert = v_val.copy()
            v_pert[i] += dx
            grad_sums['v'][i] += (Phi(m_mem, v_pert, curv_YM, curv_twist, Z, kappa, eta) - Phi_base) / dx
            Y_pert = Y.copy()
            Y_pert[i] += dx * np.eye(3)
            grad_sums['Y'][i] += (Phi(m_mem, v_val, curv_YM, curv_twist, Z, kappa, eta, Y=Y_pert) - Phi_base) / dx
            Z_pert = Z.copy()
            Z_pert[i] += dx * (1 + 1j)
            grad_sums['Z'][i] += (Phi(m_mem, v_val, curv_YM, curv_twist, Z_pert, kappa, eta) - Phi_base) / dx
        grad_x_var = np.var(grad_sums['x'] / len(dx_values))
        grad_vars.append(grad_x_var)
    grad_x = grad_sums['x'] / len(dx_values)
    grad_v = grad_sums['v'] / len(dx_values)
    grad_Y = grad_sums['Y'] / len(dx_values)
    grad_Z = grad_sums['Z'] / len(dx_values)
    moving_avg_var = np.mean(grad_vars[-window_size:]) if len(grad_vars) >= window_size else np.mean(grad_vars)
    trend_correction = 1 + 0.1 * dynamic_trend(grad_vars, window_size) if len(grad_vars) >= window_size else 1
    dynamic_range = [max(1e-5, var_threshold * 0.5 * trend_correction), min(1e-3, var_threshold * 2.0 * trend_correction)]
    adjusted_threshold = var_threshold * trend_correction
    adjusted_threshold = max(dynamic_range[0], min(dynamic_range[1], adjusted_threshold))
    optimal_dx = dx_values[np.argmin([abs(var - adjusted_threshold) for var in grad_vars])]
    adaptive_dx = optimal_dx if moving_avg_var < adjusted_threshold else dx_values[-1]
    return grad_x, grad_v, grad_Y, grad_Z, adaptive_dx, grad_vars

# Entropy coefficient forecasting
def forecast_entropy_coeffs(delta_S_hist, R2_hist, base_c1, base_c2):
    if len(R2_hist) < 64:
        return base_c1, base_c2
    window = min(50, len(R2_hist))
    r2_trend = dynamic_trend(R2_hist[-window:], window//2)
    trend_strength = min(abs(r2_trend), 0.5)
    moving_avg_c1 = np.mean([c1 for c1 in results_lawful['c1'][-window:] if 'results_lawful' in globals() and len(results_lawful['c1']) >= window] or [base_c1])
    moving_avg_c2 = np.mean([c2 for c2 in results_lawful['c2'][-window:] if 'results_lawful' in globals() and len(results_lawful['c2']) >= window] or [base_c2])
    forecast_c1 = moving_avg_c1 + r2_trend * window * (1 + 0.1 * trend_strength)
    forecast_c2 = moving_avg_c2 + r2_trend * window * (1 + 0.1 * trend_strength)
    return max(0.5, min(2.0, forecast_c1)), max(0.2, min(1.5, forecast_c2))

# RSK and BRST update with RCFT Metric and Null KBE
def update_shard(x, v, R, Y, y, v_val, m_mem, Q_f, Z, curv_YM, curv_twist, kappa, eta):
    global c1, c2, grad_vars, t_cosmological, delta_S_hist, R2_hist, tw_trend, dt, sigma0, noise_scale, rcz_crossings
    # RCFT Metric coordinates
    r = np.sqrt(np.sum(x**2, axis=1))  # Radial distance
    tau = t_cosmological  # Proper time
    a_r_t = a_function(r, tau)
    b_r_t = b_function(r, tau)
    r_kbe = photon_horizon(tau)  # Null KBE radius
    # Relativistic update with KBE influence
    gamma = 1 / np.sqrt(1 - np.sum(v**2) / c**2) if np.sum(v**2) < c**2 else 1 / np.sqrt(1 - (c - 1e-6)**2 / c**2)
    u_mu = np.array([v / c, np.zeros(n_shards), np.zeros(n_shards), np.ones(n_shards)]) / np.sqrt(1 - np.sum(v**2) / c**2)
    gamma_m_u_mu = gamma * m * u_mu
    
    # Coherence-Tension Tensor and Dual Pressure
    n_mu = np.array([1.0, 0.0, 0.0, 0.0])
    t_gamma = np.ones(n_shards) * 0.1 * a_r_t  # Photon Field stress
    t_emergence = alpha_gamma * a_r_t * np.log(1 + r_kbe)  # Emergence Drive
    t_containment = beta_L * b_r_t * np.sum(v_val**2)  # Containment Stress
    t_mu_nu = t_gamma + t_emergence - t_containment  # TÎ¼Î½
    # Null Junction Condition
    if np.any(r >= r_kbe):
        junction_factor = b_r_t / a_r_t - c**2
        if not np.allclose(junction_factor, 0, atol=1e-6):
            print(f"Null junction violation at t={tau}, r={r_kbe}, factor={junction_factor}")
    # Conservation law check (approximate)
    grad_t_mu_nu = np.gradient(t_mu_nu, axis=0)
    if not np.allclose(np.sum(grad_t_mu_nu, axis=0), 0, atol=1e-6):
        print(f"Conservation violation at t={tau}, grad_t_mu_nu={np.sum(grad_t_mu_nu, axis=0)}")
    
    # Emergence and Containment with KBE pressure
    emergence_pressure = t_emergence  # EÎ¼
    containment_resistance = t_containment  # CÎ¼
    gamma_m_u_mu += dt * (emergence_pressure - containment_resistance)
    v_new = c * np.sqrt(1 - 1 / (gamma_m_u_mu[0]**2)) if gamma_m_u_mu[0] > 0 else v
    v = v_new
    
    # Compute potential and gradients
    Phi_base = Phi(m_mem, v_val, curv_YM, curv_twist, Z, kappa, eta)
    grad_x, grad_v, grad_Y, grad_Z, dx, grad_vars = grad_Phi_finite(x, v_val, m_mem, Y, curv_YM, curv_twist, Z, kappa, eta)
    grad_R = np.array([Pi_so3(np.zeros((3, 3))) for _ in range(n_shards)])
    
    # Translational update with dynamic noise and RCFT metric
    sigma_x = sigma0 * noise_scale * np.tanh(1 / (1 + v_val + np.abs(curv_twist)))
    eta_x = np.random.randn(*x.shape) * sigma_x
    x = translational_update(x, grad_x, v, tau, c, dt, sigma_x, eta_x, noise_scale)
    
    # Rotational update
    omega = -Pi_so3(grad_R) + np.random.randn(n_shards, 3) * sigma_x
    skew_omega = np.array([[0, -omega[i, 2], omega[i, 1]], [omega[i, 2], 0, -omega[i, 0]], [-omega[i, 1], omega[i, 0], 0]] for i in range(n_shards))
    R = np.array([R[i] @ expm(dt * skew_omega[i]) for i in range(n_shards)])
    
    # Memory metric update
    sigma_Y = sigma0 * noise_scale * np.tanh(1 / (1 + v_val + np.abs(curv_twist)))
    eta_Y = np.zeros((n_shards, 3, 3))
    grad_Y_proj = Pi_SPD(grad_Y, Y)
    Y = Y - dt * grad_Y_proj
    Y = (Y + Y.transpose(0, 2, 1)) / 2
    eigvals, eigvecs = np.linalg.eigh(Y)
    if np.min(eigvals) < 1e-6:
        print(f"SPD violation at event {_}, reducing dt and noise")
        dt = 0.005
        noise_scale = np.maximum(0.5, noise_scale * 0.5)
    Y = np.array([eigvecs[i] @ np.diag(np.maximum(eigvals[i], 1e-6)) @ eigvecs[i].T for i in range(n_shards)])
    
    # Valence descent
    sigma_V = sigma0 * noise_scale * np.tanh(1 / (1 + v_val + np.abs(curv_twist)))
    eta_V = np.random.randn(n_shards) * sigma_V
    v_val = v_val - dt * grad_v + eta_V
    
    # Twistor curvature evolution with adjustable trend terms
    for i in range(n_shards):
        tw_trend[i].append(curv_twist[i])
    curv_twist_var = np.var(curv_twist) if len(curv_twist) > 1 else 0.0
    curv_twist_trend = dynamic_trend(curv_twist, window_size) if len(curv_twist) >= 2 * window_size else 0.0
    dynamic_trend_stab = dynamic_trend(curv_twist, window_size)
    adaptive_damping = delta * (1 + nu * curv_twist_var + omega * curv_twist_trend)
    if curv_twist_var > 0.1:
        adaptive_damping += 0.01 * curv_twist_trend**2  # Trend boost
    dynamic_threshold = tau_threshold * (curv_max * (1 + mu * curv_twist_var + lambda_trend * curv_twist_trend))
    adaptive_stabilization = sigma * (1 - (curv_twist / curv_max)**2) * (1 + phi * curv_twist_trend)
    adaptive_trend_correction = psi * curv_twist_trend**2 * (1 - np.abs(curv_twist_trend) / curv_max if np.abs(curv_twist_trend) < curv_max else 0)
    dynamic_trend_stabilization = chi * dynamic_trend_stab * (1 + 0.1 * np.abs(dynamic_trend_stab))
    trend_adjustment = xi * trend_adjustment(curv_twist, window_size)
    curv_twist += dt * (-grad_Z.real + zeta * curv_twist**2 - adaptive_damping * curv_twist - theta * curv_twist**3 + rho * (1 - curv_twist**2) - dynamic_threshold * np.maximum(curv_twist - curv_max, 0) + adaptive_stabilization + adaptive_trend_correction + dynamic_trend_stabilization + trend_adjustment + np.random.randn(n_shards) * sigma_x * noise_scale)
    
    # BRST update
    Q_f = Q_f_update(Q_f, Y, v_val, Z, curv_twist)
    
    # Entropy update
    if len(results_lawful['delta_S']) >= 64:
        delta_S_hist.append(delta_S)
        R2_hist.append(R2)
        c1, c2 = forecast_entropy_coeffs(delta_S_hist, R2_hist, base_c1, base_c2)
    log_det_Y = np.array([np.linalg.slogdet(Y[i])[1] for i in range(n_shards)]) if len(results_lawful['delta_S']) >= 64 else np.zeros(n_shards)
    curv_bar = curv_YM + curv_twist
    delta_log_det_Y = log_det_Y - np.roll(log_det_Y, 1)[:window_size] if len(results_lawful['delta_S']) >= 64 else np.zeros(window_size)
    delta_curv = curv_bar - np.roll(curv_bar, 1)[:window_size] if len(results_lawful['delta_S']) >= 64 else np.zeros(window_size)
    if len(results_lawful['delta_S']) >= 64:
        X = np.column_stack((delta_log_det_Y, delta_curv))
        y = delta_log_det_Y
        kf = KFold(n_splits=5, shuffle=True, random_state=42)
        r2_prev = R2 if 'R2' in locals() else 0.0
        adaptive_window = min(50, max(5, int(window_size * (1 + 0.1 * (1 - r2_prev)))))
        best_r2 = -np.inf
        best_c1_c2 = (c1, c2)
        for c1_test, c2_test in [(c1, c2), (base_c1, base_c2)]:
            r2_scores = []
            for train_idx, test_idx in kf.split(X):
                X_train, X_test = X[train_idx], X[test_idx]
                y_train, y_test = y[train_idx], y[test_idx]
                model = LinearRegression().fit(X_train, y_train)
                delta_S = c1_test * np.mean(delta_log_det_Y[train_idx]) - c2_test * np.mean(delta_curv[train_idx])
                y_pred = model.predict(X_test)
                r2 = linregress(y_test, y_pred).rvalue**2
                r2_scores.append(r2)
            mean_r2 = np.mean(r2_scores)
            if mean_r2 > best_r2:
                best_r2 = mean_r2
                best_c1_c2 = (c1_test, c2_test)
        c1, c2 = best_c1_c2
        R2 = best_r2
        delta_S = c1 * np.mean(delta_log_det_Y) - c2 * np.mean(delta_curv)
    else:
        delta_S = 0.0
        R2 = 0.0
    
    # RCZ crossing detection with Compression Scalar
    max_coherence = np.max(coherence_radius(x))
    grad_e_mu = np.gradient(t_emergence, axis=0)  # Gradient of Emergence Drive
    chi = -np.sum(grad_e_mu)  # Compression Scalar
    v_potential = lambda_val * v_val**2  # Valence potential
    if chi > np.min(v_potential) and not any('rcz_birth' in gate for gate in results_lawful['gates'][-1:]):
        print(f"RCZ matter birth at t={tau}, chi={chi}, v_min={np.min(v_potential)}")
    for threshold in rcz_thresholds:
        if max_coherence >= threshold and not any(crossing[1] >= threshold for crossing in rcz_crossings):
            rcz_crossings.append((tau, max_coherence))
            print(f"RCZ crossing at t={tau}, coherence={max_coherence}, threshold={threshold}")
    
    t_cosmological += dt
    return x, v, R, Y, y, v_val, m_mem, Q_f, Z, curv_twist, delta_S, R2, dx, grad_vars

# A/B Test Setup with matched seeds and variable n_shards
np.random.seed(42)  # Matched seed
results = {'lawful': {}, 'scrambled': {}, 'ablation': {}}
rcz_crossings = []  # Global for RCZ tracking

for n in n_shard_configs:
    n_shards = n
    x = np.random.rand(n_shards, 3)
    v = np.zeros(n_shards)
    R = np.array([np.eye(3) for _ in range(n_shards)])
    Y = np.array([np.diag(np.random.rand(3) + 0.1) for _ in range(n_shards)])
    y = np.random.rand(n_shards, 10)
    v_val = np.random.rand(n_shards)
    m_mem = np.random.rand(n_shards)
    X = np.random.rand(n_shards, 3)
    Y_metric = np.array([np.diag(np.random.rand(3) + 0.1) for _ in range(n_shards)])
    Z = X + 1j * Y_metric
    curv_twist = np.random.rand(n_shards)
    curv_YM = np.random.rand(n_shards)
    grad_vars = []
    delta_S_hist, R2_hist = [], []
    tw_trend = [[] for _ in range(n_shards)]
    noise_scale = np.ones(n_shards)

    # Lawful tau
    results_lawful = {'x': [], 'v_val': [], 'success_rate': [], 'Q_f_norm': [], 'delta_S': [], 'R2': [], 'curv_twist': [], 'dx': [], 'c1': [], 'c2': [], 'Y': [], 'coherence': [], 'gates': []}
    with open(f'shard_simulation_log_lawful_n{n}.csv', 'w', newline='') as csvfile_lawful:
        fieldnames = ['event', 't', 'r_horizon', 'coherence_radius', 'epoch_tag', 'gate_outcomes', 'rcz_crossings', 'chi', 'a_r_t', 'b_r_t']
        writer_lawful = csv.DictWriter(csvfile_lawful, fieldnames=fieldnames)
        writer_lawful.writeheader()
        for _ in range(16000):
            try:
                x, v, R, Y, y, v_val, m_mem, Q_f, Z, curv_twist, delta_S, R2, dx, grad_vars = update_shard(x, v, R, Y, y, v_val, m_mem, Q_f, Z, curv_YM, curv_twist, kappa, eta)
                epsilon = np.percentile(v_val[v_val > 0], 5)
                success_rate = np.mean(v_val >= epsilon / 2)
                Q_f_norm = norm(Q_f, axis=(1, 2, 3))
                coherence_radius = coherence_radius(x)
                r = np.sqrt(np.sum(x**2, axis=1))
                a_r_t = a_function(r, t_cosmological)
                b_r_t = b_function(r, t_cosmological)
                gates = {
                    'photon_compliance': np.all(coherence_radius <= photon_horizon(t_cosmological)),
                    'brst_norm': np.max(Q_f_norm) <= 1e-9,
                    'spd_integrity': np.all([min(np.linalg.eigh(Y_i)[0]) >= 1e-6 for Y_i in [Y]]),
                    'relativistic_bound': np.max(np.sqrt(np.sum(v**2))) < 0.9999 * c,
                    'curvature_discipline': np.all(np.abs(curv_twist) <= curv_max),
                    'rcz_birth': chi > np.min(lambda_val * v_val**2) if 'chi' in locals() else False
                }
                results_lawful['x'].append(x.copy())
                results_lawful['v_val'].append(v_val.copy())
                results_lawful['success_rate'].append(success_rate)
                results_lawful['Q_f_norm'].append(Q_f_norm)
                results_lawful['delta_S'].append(delta_S)
                results_lawful['R2'].append(R2)
                results_lawful['curv_twist'].append(curv_twist.copy())
                results_lawful['dx'].append(dx)
                results_lawful['c1'].append(c1)
                results_lawful['c2'].append(c2)
                results_lawful['Y'].append(Y.copy())
                results_lawful['coherence'].append(coherence_radius)
                results_lawful['gates'].append(gates)
                t_years = t_cosmological * 13.8e9 / 16000
                epoch_tag = 'CMB' if t_years <= 380000 else 'BAO' if t_years <= 4.5e9 else 'SN'
                writer_lawful.writerow({'event': _, 't': t_cosmological, 'r_horizon': photon_horizon(t_cosmological), 'coherence_radius': np.max(coherence_radius), 'epoch_tag': epoch_tag, 'gate_outcomes': str(gates), 'rcz_crossings': str(rcz_crossings), 'chi': chi if 'chi' in locals() else 0, 'a_r_t': str(a_r_t), 'b_r_t': str(b_r_t)})
                if not gates['photon_compliance']:
                    print(f"Photon horizon violation at event {_}")
                if not gates['brst_norm']:
                    print(f"BRST norm violation at event {_}, max norm: {np.max(Q_f_norm):.2e}")
                if not gates['spd_integrity']:
                    print(f"SPD violation at event {_}")
                if not gates['relativistic_bound']:
                    print(f"Relativistic bound violation at event {_}, max v: {np.max(np.sqrt(np.sum(v**2))):.4f}")
                curv_YM += np.random.rand(n_shards) * sigma0
            except ValueError as e:
                print(e)
                break

    # Scrambled tau
    x_scrambled = x.copy()
    v_scrambled = v.copy()
    R_scrambled = R.copy()
    Y_scrambled = Y.copy()
    y_scrambled = y.copy()
    v_val_scrambled = v_val.copy()
    m_mem_scrambled = m_mem.copy()
    Q_f_scrambled = Q_f.copy()
    Z_scrambled = Z.copy()
    curv_twist_scrambled = curv_twist.copy()
    curv_YM_scrambled = curv_YM.copy()
    grad_vars_scrambled = []
    delta_S_hist_scrambled, R2_hist_scrambled = [], []
    tw_trend_scrambled = [[] for _ in range(n_shards)]
    t_cosmological_scrambled = 0.0
    violation_count = 0
    with open(f'shard_simulation_log_scrambled_n{n}.csv', 'w', newline='') as csvfile_scrambled:
        fieldnames = ['event', 't', 'r_horizon', 'coherence_radius', 'epoch_tag', 'gate_outcomes', 'rcz_crossings', 'chi', 'a_r_t', 'b_r_t']
        writer_scrambled = csv.DictWriter(csvfile_scrambled, fieldnames=fieldnames)
        writer_scrambled.writeheader()
        for _ in range(16000):
            try:
                idx = np.random.permutation(n_shards)
                # Causal reordering by valence trend
                valence_trend = [dynamic_trend(v_val_scrambled[i:i+1], window_size) for i in range(n_shards)]
                idx = idx[np.argsort(valence_trend)[::-1]]  # Reverse sort for stability
                x_scrambled, v_scrambled, R_scrambled, Y_scrambled, y_scrambled, v_val_scrambled, m_mem_scrambled, Q_f_scrambled, Z_scrambled, curv_twist_scrambled, delta_S_scrambled, R2_scrambled, dx_scrambled, grad_vars_scrambled = update_shard(
                    x_scrambled[idx], v_scrambled[idx], R_scrambled[idx], Y_scrambled[idx], y_scrambled[idx],
                    v_val_scrambled[idx], m_mem_scrambled[idx], Q_f_scrambled[idx], Z_scrambled[idx], curv_YM_scrambled[idx], curv_twist_scrambled[idx], kappa, eta)
                epsilon = np.percentile(v_val_scrambled[v_val_scrambled > 0], 5)
                success_rate = np.mean(v_val_scrambled >= epsilon / 2)
                Q_f_norm_scrambled = norm(Q_f_scrambled, axis=(1, 2, 3))
                coherence_radius = coherence_radius(x_scrambled)
                r = np.sqrt(np.sum(x_scrambled**2, axis=1))
                a_r_t = a_function(r, t_cosmological_scrambled)
                b_r_t = b_function(r, t_cosmological_scrambled)
                gates = {
                    'photon_compliance': np.all(coherence_radius <= photon_horizon(t_cosmological_scrambled)),
                    'brst_norm': np.max(Q_f_norm_scrambled) <= 1e-9,
                    'spd_integrity': np.all([min(np.linalg.eigh(Y_i)[0]) >= 1e-6 for Y_i in [Y_scrambled]]),
                    'relativistic_bound': np.max(np.sqrt(np.sum(v_scrambled**2))) < 0.9999 * c,
                    'curvature_discipline': np.all(np.abs(curv_twist_scrambled) <= curv_max),
                    'rcz_birth': chi > np.min(lambda_val * v_val_scrambled**2) if 'chi' in locals() else False
                }
                if not gates['photon_compliance']:
                    violation_count += 1
                if violation_count >= 2 and dt > 0.005:
                    dt = 0.005
                    print(f"Reducing dt to {dt} at event {_}")
                results['scrambled'][n] = results.get('scrambled', {}).get(n, {'x': [], 'v_val': [], 'success_rate': [], 'Q_f_norm': [], 'delta_S': [], 'R2': [], 'curv_twist': [], 'dx': [], 'c1': [], 'c2': [], 'Y': [], 'coherence': [], 'gates': []})
                results['scrambled'][n]['x'].append(x_scrambled.copy())
                results['scrambled'][n]['v_val'].append(v_val_scrambled.copy())
                results['scrambled'][n]['success_rate'].append(success_rate)
                results['scrambled'][n]['Q_f_norm'].append(Q_f_norm_scrambled)
                results['scrambled'][n]['delta_S'].append(delta_S_scrambled)
                results['scrambled'][n]['R2'].append(R2_scrambled)
                results['scrambled'][n]['curv_twist'].append(curv_twist_scrambled.copy())
                results['scrambled'][n]['dx'].append(dx_scrambled)
                results['scrambled'][n]['c1'].append(c1)
                results['scrambled'][n]['c2'].append(c2)
                results['scrambled'][n]['Y'].append(Y_scrambled.copy())
                results['scrambled'][n]['coherence'].append(coherence_radius)
                results['scrambled'][n]['gates'].append(gates)
                t_years = t_cosmological_scrambled * 13.8e9 / 16000
                epoch_tag = 'CMB' if t_years <= 380000 else 'BAO' if t_years <= 4.5e9 else 'SN'
                writer_scrambled.writerow({'event': _, 't': t_cosmological_scrambled, 'r_horizon': photon_horizon(t_cosmological_scrambled), 'coherence_radius': np.max(coherence_radius), 'epoch_tag': epoch_tag, 'gate_outcomes': str(gates), 'rcz_crossings': str(rcz_crossings), 'chi': chi if 'chi' in locals() else 0, 'a_r_t': str(a_r_t), 'b_r_t': str(b_r_t)})
                if not gates['photon_compliance']:
                    print(f"Photon horizon violation (scrambled) at event {_}")
                if not gates['brst_norm']:
                    print(f"BRST norm violation (scrambled) at event {_}, max norm: {np.max(Q_f_norm_scrambled):.2e}")
                if not gates['spd_integrity']:
                    print(f"SPD violation (scrambled) at event {_}")
                if not gates['relativistic_bound']:
                    print(f"Relativistic bound violation (scrambled) at event {_}, max v: {np.max(np.sqrt(np.sum(v_scrambled**2))):.4f}")
                curv_YM_scrambled += np.random.rand(n_shards) * sigma0
            except ValueError as e:
                print(e)
                break
            t_cosmological_scrambled += dt

    # Store lawful results
    results['lawful'][n] = results_lawful

# Ablation studies
for n in n_shard_configs:
    for ablation in [('psi', 0), ('chi', 0), ('xi', 0)]:
        param, value = ablation
        globals()[param] = value
        x = np.random.rand(n_shards, 3)
        v = np.zeros(n_shards)
        R = np.array([np.eye(3) for _ in range(n_shards)])
        Y = np.array([np.diag(np.random.rand(3) + 0.1) for _ in range(n_shards)])
        y = np.random.rand(n_shards, 10)
        v_val = np.random.rand(n_shards)
        m_mem = np.random.rand(n_shards)
        X = np.random.rand(n_shards, 3)
        Y_metric = np.array([np.diag(np.random.rand(3) + 0.1) for _ in range(n_shards)])
        Z = X + 1j * Y_metric
        curv_twist = np.random.rand(n_shards)
        curv_YM = np.random.rand(n_shards)
        grad_vars = []
        delta_S_hist, R2_hist = [], []
        tw_trend = [[] for _ in range(n_shards)]
        noise_scale = np.ones(n_shards)
        dt = 0.01
        t_cosmological = 0.0
        results_ablation = {'x': [], 'v_val': [], 'success_rate': [], 'Q_f_norm': [], 'delta_S': [], 'R2': [], 'curv_twist': [], 'dx': [], 'c1': [], 'c2': [], 'Y': [], 'coherence': [], 'gates': []}
        with open(f'shard_simulation_log_ablation_{param}_n{n}.csv', 'w', newline='') as csvfile_ablation:
            fieldnames = ['event', 't', 'r_horizon', 'coherence_radius', 'epoch_tag', 'gate_outcomes', 'rcz_crossings', 'chi', 'a_r_t', 'b_r_t']
            writer_ablation = csv.DictWriter(csvfile_ablation, fieldnames=fieldnames)
            writer_ablation.writeheader()
            for _ in range(16000):
                try:
                    x, v, R, Y, y, v_val, m_mem, Q_f, Z, curv_twist, delta_S, R2, dx, grad_vars = update_shard(x, v, R, Y, y, v_val, m_mem, Q_f, Z, curv_YM, curv_twist, kappa, eta)
                    epsilon = np.percentile(v_val[v_val > 0], 5)
                    success_rate = np.mean(v_val >= epsilon / 2)
                    Q_f_norm = norm(Q_f, axis=(1, 2, 3))
                    coherence_radius = coherence_radius(x)
                    r = np.sqrt(np.sum(x**2, axis=1))
                    a_r_t = a_function(r, t_cosmological)
                    b_r_t = b_function(r, t_cosmological)
                    gates = {
                        'photon_compliance': np.all(coherence_radius <= photon_horizon(t_cosmological)),
                        'brst_norm': np.max(Q_f_norm) <= 1e-9,
                        'spd_integrity': np.all([min(np.linalg.eigh(Y_i)[0]) >= 1e-6 for Y_i in [Y]]),
                        'relativistic_bound': np.max(np.sqrt(np.sum(v**2))) < 0.9999 * c,
                        'curvature_discipline': np.all(np.abs(curv_twist) <= curv_max),
                        'rcz_birth': chi > np.min(lambda_val * v_val**2) if 'chi' in locals() else False
                    }
                    results_ablation['x'].append(x.copy())
                    results_ablation['v_val'].append(v_val.copy())
                    results_ablation['success_rate'].append(success_rate)
                    results_ablation['Q_f_norm'].append(Q_f_norm)
                    results_ablation['delta_S'].append(delta_S)
                    results_ablation['R2'].append(R2)
                    results_ablation['curv_twist'].append(curv_twist.copy())
                    results_ablation['dx'].append(dx)
                    results_ablation['c1'].append(c1)
                    results_ablation['c2'].append(c2)
                    results_ablation['Y'].append(Y.copy())
                    results_ablation['coherence'].append(coherence_radius)
                    results_ablation['gates'].append(gates)
                    t_years = t_cosmological * 13.8e9 / 16000
                    epoch_tag = 'CMB' if t_years <= 380000 else 'BAO' if t_years <= 4.5e9 else 'SN'
                    writer_ablation.writerow({'event': _, 't': t_cosmological, 'r_horizon': photon_horizon(t_cosmological), 'coherence_radius': np.max(coherence_radius), 'epoch_tag': epoch_tag, 'gate_outcomes': str(gates), 'rcz_crossings': str(rcz_crossings), 'chi': chi if 'chi' in locals() else 0, 'a_r_t': str(a_r_t), 'b_r_t': str(b_r_t)})
                    if not gates['photon_compliance']:
                        print(f"Photon horizon violation at event {_} (ablation {param})")
                    if not gates['brst_norm']:
                        print(f"BRST norm violation at event {_} (ablation {param}), max norm: {np.max(Q_f_norm):.2e}")
                    if not gates['spd_integrity']:
                        print(f"SPD violation at event {_} (ablation {param})")
                    if not gates['relativistic_bound']:
                        print(f"Relativistic bound violation at event {_} (ablation {param}), max v: {np.max(np.sqrt(np.sum(v**2))):.4f}")
                    curv_YM += np.random.rand(n_shards) * sigma0
                except ValueError as e:
                    print(e)
                    break
                t_cosmological += dt
            results['ablation'][n][param] = results_ablation
            globals()[param] = {'psi': 0.01, 'chi': 0.015, 'xi': 0.02}[param]  # Reset parameters

# Validation metrics
def validate_metrics(results_lawful, results_scrambled, n_shards):
    lawful_gates = np.array(results_lawful['gates'][-window_size:]) if len(results_lawful['gates']) >= window_size else []
    scrambled_gates = np.array(results_scrambled['gates'][-window_size:]) if len(results_scrambled['gates']) >= window_size else []
    brst_trend = np.diff(np.max(results_lawful['Q_f_norm'][-2*window_size:], axis=1)) if len(results_lawful['Q_f_norm']) >= 2*window_size else [0]
    delta_S_median_lawful = np.median(results_lawful['delta_S'][-window_size:]) if len(results_lawful['delta_S']) >= window_size else 0.0
    delta_S_var_lawful = np.var(results_lawful['delta_S'][-window_size:]) if len(results_lawful['delta_S']) >= window_size else 0.0
    delta_S_var_scrambled = np.var(results_scrambled['delta_S'][-window_size:]) if len(results_scrambled['delta_S']) >= window_size else 0.0
    d_delta_S = cohen_d(results_lawful['delta_S'][-window_size:], results_scrambled['delta_S'][-window_size:]) if len(results_lawful['delta_S']) >= window_size and len(results_scrambled['delta_S']) >= window_size else 0.0
    success_rate_lawful = np.array(results_lawful['success_rate'][-window_size:]) if len(results_lawful['success_rate']) >= window_size else []
    success_rate_scrambled = np.array(results_scrambled['success_rate'][-window_size:]) if len(results_scrambled['success_rate']) >= window_size else []
    coherence_lawful = np.array(results_lawful['coherence'][-window_size:]) if len(results_lawful['coherence']) >= window_size else []
    coherence_scrambled = np.array(results_scrambled['coherence'][-window_size:]) if len(results_scrambled['coherence']) >= window_size else []

    def confidence_interval(data, confidence=0.95):
        n = len(data)
        if n == 0: return (0, 0)
        m, se = np.mean(data), stats.sem(data)
        h = se * t.ppf((1 + confidence) / 2, n-1)
        return m - h, m + h

    ci_success_lawful = confidence_interval(success_rate_lawful)
    ci_success_scrambled = confidence_interval(success_rate_scrambled)
    d_success = cohen_d(success_rate_lawful, success_rate_scrambled) if len(success_rate_lawful) > 0 and len(success_rate_scrambled) > 0 else 0.0
    d_coherence = cohen_d(np.max(coherence_lawful, axis=1), np.max(coherence_scrambled, axis=1)) if len(coherence_lawful) > 0 and len(coherence_scrambled) > 0 else 0.0

    print(f"n_shards = {n_shards}")
    print(f"Photon Horizon Compliance (Lawful): {np.all(lawful_gates['photon_compliance'])}")
    print(f"Photon Horizon Compliance (Scrambled): {np.all(scrambled_gates['photon_compliance'])}")
    print(f"BRST Norm Trend (Lawful): {np.all(brst_trend <= 0)}")
    print(f"SPD Integrity (Lawful): {np.all(lawful_gates['spd_integrity'])}")
    print(f"Relativistic Bound (Lawful): {np.all(lawful_gates['relativistic_bound'])}")
    print(f"Curvature Discipline (Lawful): {np.all(lawful_gates['curvature_discipline'])}")
    print(f"Delta S Median (Lawful): {delta_S_median_lawful:.4f}, Variance (Lawful): {delta_S_var_lawful:.4f}")
    print(f"Delta S Variance (Scrambled): {delta_S_var_scrambled:.4f}, Cohen's d: {d_delta_S:.4f}")
    print(f"Success Rate CI (Lawful): [{ci_success_lawful[0]:.4f}, {ci_success_lawful[1]:.4f}]")
    print(f"Success Rate CI (Scrambled): [{ci_success_scrambled[0]:.4f}, {ci_success_scrambled[1]:.4f}]")
    print(f"Cohen's d (Success Rate): {d_success:.4f}")
    print(f"Cohen's d (Coherence): {d_coherence:.4f}")
    print(f"RCZ Births (Lawful): {any(gate['rcz_birth'] for gate in lawful_gates)}")
    print(f"RCZ Births (Scrambled): {any(gate['rcz_birth'] for gate in scrambled_gates)}")

for n in n_shard_configs:
    validate_metrics(results['lawful'][n], results['scrambled'][n], n)

# Visualization
for n in n_shard_configs:
    plt.figure(figsize=(12, 8))
    plt.plot(range(16000), results['lawful'][n]['success_rate'], label='Lawful')
    plt.plot(range(16000), results['scrambled'][n]['success_rate'], label='Scrambled')
    plt.title(f"Success Rate Comparison (n_shards = {n})")
    plt.xlabel("Event")
    plt.ylabel("Success Rate")
    plt.legend()
    plt.show()

    plt.figure(figsize=(12, 8))
    t_values = np.arange(0, 16000 * dt, dt)
    horizon_values = [photon_horizon(t) for t in t_values]
    coherence_lawful = np.max(results['lawful'][n]['coherence'], axis=1)
    coherence_scrambled = np.max(results['scrambled'][n]['coherence'], axis=1)
    plt.plot(t_values, horizon_values, label='KBE Horizon (Î›CDM)', linestyle='--')
    plt.plot(t_values, coherence_lawful, label='Lawful Coherence')
    plt.plot(t_values, coherence_scrambled, label='Scrambled Coherence')
    plt.title(f"Coherence Growth vs. KBE Horizon (n_shards = {n})")
    plt.xlabel("Cosmological Time (scaled)")
    plt.ylabel("Radius")
    plt.legend()
    plt.show()

    # Correlation analysis
    t_data_lawful = np.array([row['t'] for row in csv.DictReader(open(f'shard_simulation_log_lawful_n{n}.csv'))])
    rh_data_lawful = np.array([float(row['r_horizon']) for row in csv.DictReader(open(f'shard_simulation_log_lawful_n{n}.csv'))])
    coherence_data_lawful = np.array([float(row['coherence_radius']) for row in csv.DictReader(open(f'shard_simulation_log_lawful_n{n}.csv'))])
    correlation_lawful, _ = stats.pearsonr(coherence_data_lawful, rh_data_lawful)
    print(f"Correlation (Lawful, n={n}): {correlation_lawful:.4f}")

    t_data_scrambled = np.array([row['t'] for row in csv.DictReader(open(f'shard_simulation_log_scrambled_n{n}.csv'))])
    rh_data_scrambled = np.array([float(row['r_horizon']) for row in csv.DictReader(open(f'shard_simulation_log_scrambled_n{n}.csv'))])
    coherence_data_scrambled = np.array([float(row['coherence_radius']) for row in csv.DictReader(open(f'shard_simulation_log_scrambled_n{n}.csv'))])
    correlation_scrambled, _ = stats.pearsonr(coherence_data_scrambled, rh_data_scrambled)
    print(f"Correlation (Scrambled, n={n}): {correlation_scrambled:.4f}")
