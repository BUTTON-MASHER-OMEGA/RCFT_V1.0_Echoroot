v9h Tuning Run treating the Higgs Field as a Vector Space:


import math
import json
import datetime
import hashlib

# ==========================================
# CONFIGURATION: PHYSICAL CONSTANTS (PDG 2024)
# ==========================================
MZ = 91.1876       # Z-boson mass [GeV]
MT = 172.76        # Top quark mass [GeV]
MH_TARGET = 125.25 # Target Higgs Mass [GeV]
VEV = 246.22       # Vacuum Expectation Value [GeV]
Q0 = 1.0e17        # Kinematic Boundary Envelope [GeV]

# Fixed Gauge Couplings at MZ (Input)
ALPHA_1_MZ = 0.01017
ALPHA_2_MZ = 0.03381
ALPHA_3_MZ = 0.11810

def alpha_to_g(alpha): return math.sqrt(4.0 * math.pi * alpha)
G1_MZ = alpha_to_g(ALPHA_1_MZ)
G2_MZ = alpha_to_g(ALPHA_2_MZ)
G3_MZ = alpha_to_g(ALPHA_3_MZ)

# Initial Top Yukawa at MZ
YT_MZ = (math.sqrt(2) * MT) / VEV

# ==========================================
# CORE LOGIC: RGE EVOLUTION (1-LOOP COUPLED)
# ==========================================

def beta_g1(g1): return (41/10) * (1/(16*math.pi**2)) * g1**3
def beta_g2(g2): return (-19/6) * (1/(16*math.pi**2)) * g2**3
def beta_g3(g3): return (-7)    * (1/(16*math.pi**2)) * g3**3

def beta_yt(yt, g1, g2, g3):
    term_y = 4.5 * yt**2
    term_g = 8*g3**2 + 2.25*g2**2 + (17/12)*g1**2
    return (1.0/(16*math.pi**2)) * yt * (term_y - term_g)

def beta_lambda(lam, yt, g1, g2):
    # Dominant terms for stability analysis
    term_self = 24 * lam**2
    term_mix = 12 * lam * yt**2
    term_top = -6 * yt**4
    term_gauge = 9/8 * (g2**4 + (g1**2 + g2**2)**2 / 50) 
    return (1.0/(16*math.pi**2)) * (term_self + term_mix + term_top + term_gauge)

def rk4_step_coupled(state, dt):
    # state = [g1, g2, g3, yt, lam]
    def get_derivs(s):
        g1, g2, g3, yt, lam = s
        return [
            beta_g1(g1),
            beta_g2(g2),
            beta_g3(g3),
            beta_yt(yt, g1, g2, g3),
            beta_lambda(lam, yt, g1, g2)
        ]
    
    k1 = get_derivs(state)
    k2 = get_derivs([x + 0.5*dt*k for x, k in zip(state, k1)])
    k3 = get_derivs([x + 0.5*dt*k for x, k in zip(state, k2)])
    k4 = get_derivs([x + dt*k for x, k in zip(state, k3)])
    
    return [state[i] + (dt/6.0) * (k1[i] + 2*k2[i] + 2*k3[i] + k4[i]) for i in range(5)]

def run_down(lambda_q0, inputs_q0):
    # Run from Q0 -> MZ
    # inputs_q0: [g1, g2, g3, yt] (Pre-calculated up-run values)
    steps = 1000
    t_start = math.log(Q0)
    t_end = math.log(MZ)
    dt = (t_end - t_start) / steps
    
    current_state = inputs_q0 + [lambda_q0]
    
    for _ in range(steps):
        current_state = rk4_step_coupled(current_state, dt)
        
    lambda_mz = current_state[4]
    
    # Calculate Higgs Mass from lambda_mz
    # mH = v * sqrt(2 * lambda)
    if lambda_mz < 0:
        return -1.0 # Invalid for mass calculation, but physically meaningful (instability)
    return VEV * math.sqrt(2 * lambda_mz)

# ==========================================
# MODULE: TUNER LOGIC
# ==========================================

def get_q0_background():
    # Run UP from MZ to get the Q0 environment (Gauge/Yukawa)
    # We use a dummy lambda for the up-run since gauge/yukawa are mostly decoupled from lambda
    # (Lambda affects them weakly, but they drive Lambda strongly)
    lam_dummy = 0.13
    state_up = [G1_MZ, G2_MZ, G3_MZ, YT_MZ, lam_dummy]
    
    steps = 1000
    t_start = math.log(MZ)
    t_end = math.log(Q0)
    dt = (t_end - t_start) / steps
    
    for _ in range(steps):
        state_up = rk4_step_coupled(state_up, dt)
        
    # Return [g1, g2, g3, yt] at Q0
    return state_up[0:4]

def bisection_tune(target_mass, inputs_q0):
    # Search for lambda(Q0) in range [-0.2, 0.1]
    # We know from v9h that 0.0 gives ~144 GeV. So we need NEGATIVE lambda.
    low = -0.2
    high = 0.1
    tol = 1e-5
    
    for i in range(100):
        mid = (low + high) / 2.0
        mass = run_down(mid, inputs_q0)
        
        # If mass is -1 (lambda_mz < 0), we are too low (vacuum too unstable)
        # We need higher lambda
        if mass == -1.0:
            low = mid
            continue
            
        diff = mass - target_mass
        
        if abs(diff) < tol:
            return mid
            
        # If derived mass > target, we need LOWER lambda(Q0)
        if diff > 0:
            high = mid
        else:
            low = mid
            
    return (low + high) / 2.0

def generate_v9h_tuning_capsule():
    # 1. Get Environment
    inputs_q0 = get_q0_background()
    
    # 2. Tune
    required_lambda_q0 = bisection_tune(MH_TARGET, inputs_q0)
    
