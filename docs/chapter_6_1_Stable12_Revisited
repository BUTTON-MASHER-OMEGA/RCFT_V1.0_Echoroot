CODE


import numpy as np
import json

# ==============================
# LOCKED RCFT INVARIANTS
# ==============================
PHI = (1 + np.sqrt(5)) / 2

def X_n(n: int) -> float:
    """
    Step-based contraction invariant:
    X_n = φ^{-n}
    """
    return PHI ** (-n)

def X_D(D: int) -> float:
    """
    Dimension-based contraction ceiling:
    X_D = φ^{-D}
    (One φ-recursive step per dimension)
    """
    return PHI ** (-D)

# ==============================
# ϕ-RECURSIVE STABLE OPERATOR
# ==============================
def build_phi_recursive_operator(dim: int = 12) -> np.ndarray:
    """
    A = diag(1, φ^{-1}, φ^{-2}, ..., φ^{-(dim-1)})
    """
    exponents = np.arange(0, dim)
    sigmas = PHI ** -exponents
    return np.diag(sigmas)

# ==============================
# SKEW AUDIT
# ==============================
def increment_skew_audit(X_t: np.ndarray) -> dict:
    dX = np.diff(X_t, axis=0)
    skew = np.mean(((dX - dX.mean(axis=0)) / (dX.std(axis=0) + 1e-12))**3, axis=0)
    score = float(np.median(np.abs(skew)))
    return {
        "Lyapunov_Skew_Value": score,
        "Lyapunov_Skew_Pass": bool(score <= 0.42)
    }

# ==============================
# GENERAL φ^n CONTRACTION TEST
# ==============================
def phi_n_contraction_test(A: np.ndarray, g0: np.ndarray, n_steps: int) -> dict:
    """
    Apply A^n to g0, measure off-axis fraction,
    compare to X_n = φ^{-n}.
    """
    g = g0.copy().astype(float)
    for _ in range(n_steps):
        g = A @ g

    # Project onto dominant axis
    v_dom = np.eye(A.shape[0])[0]
    P_dom = np.outer(v_dom, v_dom)
    off_axis = np.linalg.norm(g - P_dom @ g) / (np.linalg.norm(g) + 1e-15)

    return {
        "Steps": n_steps,
        "Measured_OffAxis": float(off_axis),
        "X_n_Ceiling": float(X_n(n_steps)),
        "Phi^n_Contraction_Pass": bool(off_axis <= X_n(n_steps) + 1e-12)
    }

# ==============================
# FINAL AUDIT
# ==============================
def run_phi12_audit():
    np.random.seed(42)
    D = 12
    A = build_phi_recursive_operator(D)

    # Generate coherent trajectory for skew audit
    T = 500
    X = np.zeros((T, D))
    X[0] = np.random.randn(D) * 0.1
    for t in range(1, T):
        X[t] = A @ X[t-1] + np.random.randn(D) * 0.02

    # Initial vector for contraction test
    g0 = np.ones(D)
    g0[:4] *= 5.0

    skew = increment_skew_audit(X)
    contract = phi_n_contraction_test(A, g0, n_steps=D)

    report = {
        "Theory": "RCFT φ^D Stability Ceiling",
        "Stable_Dimensions": D,

        # Explicit invariants
        "X_D": float(X_D(D)),
        "X_n_for_n=D": float(X_n(D)),

        # Skew audit
        **skew,

        # Contraction audit
        **contract,

        # Final verdict
        "Verdict": "PASS" if (
            skew["Lyapunov_Skew_Pass"] and contract["Phi^n_Contraction_Pass"]
        ) else "FAIL"
    }

    # Convert numpy bools
    for k, v in report.items():
        if isinstance(v, np.bool_):
            report[k] = bool(v)

    print("\n" + "="*65)
    print("          RCFT φ^D STABILITY CEILING AUDIT")
    print("="*65)
    print(json.dumps(report, indent=2))
    print("="*65)

run_phi12_audit()




