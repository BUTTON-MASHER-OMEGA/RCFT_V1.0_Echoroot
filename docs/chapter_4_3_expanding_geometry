YAML patch (SU(3) upgrade, audit-ready)
yaml
gauge:
  group: "SU(3)"
  representation: "fundamental"
  storage:
    link_as:
      - "matrix_3x3_complex"     # primary
      - "algebra_coeffs_theta"   # optional; 8 real numbers per edge
    reverse_edge_alias:
      derived_not_stored: true
      rule: "U_ji = U_ij†"
  generators:
    basis: "Gell-Mann"
    T_norm: "Tr(T^a T^b) = 1/2 δ^{ab}"
    count: 8
  vertex_gauge:
    enabled: true
    G_vertices: {}               # optional: per-vertex SU(3) matrices for tests
  edge_holonomy:
    edges: {}                    # e.g., e01: {U: [[...],[...],[...]], theta: [θ1..θ8]}
  plaquettes:
    # face → ordered edges with induced orientation
    faces: []                    # [{face: f012, boundary: [e01, e12, e20]}]
  curvature:
    method: "logm_projected"     # matrix log then project to su(3): (X - X†)/2 - trace-part
    F_faces: []                  # [{face: f012, alg_coeffs: [F1..F8]}]
    audits:
      bianchi_local: []          # optional: local transport sums ~ 0
  wilson_loops:
    fundamental:
      loops: []                  # [{id, edges: [(i,j,ori)...], value: null, pass: null}]
    adjoint:
      enabled: false
      loops: []
  checks:
    unitarity_dev_max: {value: null, tol_max: 1.0e-10}     # max ||U†U - I||_F
    specialness_dev_max: {value: null, tol_max: 1.0e-10}   # max |det(U) - 1|
    reverse_alias_ok: null
    loop_tolerances:
      default_phase_tol: 1.0e-8
      default_trace_band: [0.0, 1.0]
yaml
maxwell_map:
  # Extend to non-Abelian Yang–Mills (static form shown; dynamic via leapfrog later)
  nonabelian:
    enabled: true
    bundles:
      field_rep: "adjoint"
      matter_rep: "fundamental"
    operators:
      covariant_d: "d_A"         # implemented via parallel transport + commutator on cochains
      curvature: "F"             # from plaquette logs
    identities:
      bianchi:
        statement: "d_A F = 0"
        residuals: {l2: null, pass: null}
      yang_mills_static:
        statement: "d_A (*F) = J"
        residuals: {l2: null, pass: null}
    audits:
      gauge_covariance:
        link: "U_ij → G_i U_ij G_j^{-1}"
        curvature_transform: "F_f → G_p F_f G_p^{-1} (transported to pivot p)"
        pass: null
