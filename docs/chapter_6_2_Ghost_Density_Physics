v13_spectral_valence CODE:

import numpy as np
import scipy.linalg as la
import networkx as nx
import matplotlib.pyplot as plt

# ==========================================
# RCFT Simulation v13: Spectral Valence
# Objective: Prove that Mass (Sp8) dictates Valence (U1)
# ==========================================

class ResonantCluster:
    def __init__(self, name, size, ghost_density, stiffness=1.0):
        """
        A 'Particle' defined by its local Ghost Lattice.
       
        Args:
            name (str): ID (e.g., 'Hydrogen', 'DarkMatter')
            size (int): Number of nodes in the cluster
            ghost_density (float): The Sp(8) mass loading (Inertia)
            stiffness (float): Bond strength of the lattice
        """
        self.name = name
        self.size = size
        self.ghost_density = ghost_density
        self.stiffness = stiffness
       
        # 1. Generate the Ghost Lattice (The Geometry)
        # We use a random geometric graph to simulate natural packing
        self.graph = nx.random_geometric_graph(size, radius=0.4, seed=42)
       
        # 2. Compute the Spectral Signature (The Song)
        self.eigenvalues = self._compute_spectrum()
       
        # 3. Calculate Valence (The Properties)
        self.valence_score, self.active_modes = self._calculate_valence()

    def _compute_spectrum(self):
        """
        Solves the Generalized Eigenvalue Problem: L * v = lambda * M * v
        This gives us the vibrational frequencies of the cluster.
        """
        # Adjacency and Laplacian
        A = nx.adjacency_matrix(self.graph).toarray() * self.stiffness
        D = np.diag(np.sum(A, axis=1))
        L = D - A
       
        # Mass Matrix (The Sp(8) Ghost Density)
        # Higher density = Higher inertia = Lower frequency
        # We add small noise to simulate non-uniformity
        noise = np.random.normal(1.0, 0.1, self.size)
        mass_vector = self.ghost_density * noise
        M = np.diag(mass_vector)
       
        # Solve eigh(L, M) -> Generalized eigenvalues
        # Filter out very small values (rigid body modes)
        evals, _ = la.eigh(L, M)
        return evals[evals > 1e-5]

    def _calculate_valence(self):
        """
        Valence is the count of eigenvalues that fall within the
        'Vacuum Resonance Band' (The U(1) Channel).
        """
        # The Universal Vacuum Band (e.g., matching the Higgs Flux)
        VACUUM_MIN = 0.5
        VACUUM_MAX = 2.5
       
        active = [e for e in self.eigenvalues if VACUUM_MIN < e < VACUUM_MAX]
        return len(active), active

    def __repr__(self):
        return f"[{self.name}] Mass: {self.ghost_density} | Valence: {self.valence_score}"

# ==========================================
# The Experiment: Testing Resonance
# ==========================================

def check_resonance(p1, p2, tolerance=0.1):
    """
    Checks if two particles share a 'Musical Note' (Eigenvalue).
    If they do, they can bond (Twistor Conjugation).
    """
    matches = []
    for e1 in p1.active_modes:
        for e2 in p2.active_modes:
            if abs(e1 - e2) < tolerance:
                matches.append((e1, e2))
   
    strength = len(matches)
    is_resonant = strength > 0
    return is_resonant, strength

def run_simulation_v13():
    print("--- RCFT v13: Spectral Valence Audit ---")
    print("Hypothesis: Mass dictates Geometry, Geometry dictates Valence.\n")

    # 1. Create Isotypes with varying Mass (Sp8 Density)
    particles = [
        ResonantCluster("Light_Boson", size=20, ghost_density=1.0),   # Light
        ResonantCluster("Matter_Fermion", size=20, ghost_density=5.0), # Medium
        ResonantCluster("Dark_Matter", size=20, ghost_density=50.0)    # Heavy
    ]

    # 2. Audit Individual Properties
    print("--- Phase 1: The Periodic Table of Resonance ---")
    for p in particles:
        print(f"Particle: {p.name}")
        print(f"  > Ghost Density: {p.ghost_density}")
        print(f"  > Eigenmodes: {[round(e,2) for e in p.active_modes]}")
        print(f"  > Calculated Valence: {p.valence_score}")
        if p.valence_score == 0:
            print("  > STATUS: INERT (Dark Sector)")
        else:
            print("  > STATUS: ACTIVE (Visible Sector)")
        print("-" * 30)

    # 3. Test Interaction (Collision)
    print("\n--- Phase 2: Interaction Test (Symplectic Resonance) ---")
   
    # Test A: Light + Light
    pA = ResonantCluster("Photon_A", 20, 1.0)
    pB = ResonantCluster("Photon_B", 20, 1.0)
    res, strength = check_resonance(pA, pB)
    print(f"Collision: Photon_A + Photon_B -> Resonance: {res} (Strength: {strength})")

    # Test B: Matter + Dark Matter
    pC = ResonantCluster("Electron", 20, 5.0)
    pD = ResonantCluster("DarkHalo", 20, 50.0)
    res, strength = check_resonance(pC, pD)
    print(f"Collision: Electron + DarkHalo -> Resonance: {res} (Strength: {strength})")
   
    if not res:
        print("  > RESULT: Elastic Scattering. No shared frequency.")
        print("  > IMPLICATION: Dark Matter is invisible because it is 'out of tune'.")

if __name__ == "__main__":
    run_simulation_v13()






