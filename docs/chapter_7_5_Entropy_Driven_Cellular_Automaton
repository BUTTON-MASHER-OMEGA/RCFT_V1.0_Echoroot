    "Metric": ["α", "r", "ρ", "ESS", "ESS₀", "ESS Ratio", "Monotonicity", "Triangulation Dev."],
    "Value": ["0.0139 ± 0.0003", "0.86", "0.84", "6150", "7350", "0.836", "0 violations, p>0.9", "0.0027"],
    "Pass Criteria": ["—", "≥0.85", "≥0.8", "—", "—", "≥0.8", "All n=1…4 pass", "<0.003"]
}

