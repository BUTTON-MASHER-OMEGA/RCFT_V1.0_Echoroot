  band: [0.3934, 0.3990]
  beta_c: 0.39614
  beta_c_uncertainty: 0.0014
  sweep_delta: 0.0001
lattice:
  d: 2        # optional: 3
  size_L: 128
  neighborhood: moore_radius_1
  boundary: periodic
state_space:
  K: 2
energy:
  J: 1.0
  h: 0.0
