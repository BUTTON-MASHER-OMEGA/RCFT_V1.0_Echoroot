  bernoulli_p: 0.5
  seed: 101
runtime_estimate:
  L128_1e4_sweeps_minutes: 10
data_products:
  export_formats: [yaml, csv]
  timeseries: [e, m]
  aggregates: [C_L, xi, tau_int, U4]
